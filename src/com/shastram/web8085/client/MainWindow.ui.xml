<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder" xmlns:g="urn:import:com.google.gwt.user.client.ui">
  <ui:style field="css" src="Style.css" />
    
  <g:DockLayoutPanel unit='EM' height="8000px" width="100%">
    <g:north size='1'>
      <g:VerticalPanel></g:VerticalPanel>
    </g:north>
    <g:east size='2'>
      <g:VerticalPanel></g:VerticalPanel>
    </g:east>
    <g:west size='2'>
      <g:VerticalPanel></g:VerticalPanel>
    </g:west>
    <g:south size='2'>
      <g:VerticalPanel></g:VerticalPanel>
    </g:south>

    <g:center>
      <g:VerticalPanel>
        <g:HorizontalPanel>
          <g:VerticalPanel spacing="1">
            <g:Label>Enter code here</g:Label>
            <g:RichTextArea ui:field="sourceCode" width="300px" height="300px" addStyleNames="{css.sourceCodeWindow}"></g:RichTextArea>
          </g:VerticalPanel>
          <g:HorizontalPanel width="100%">
            <g:HorizontalPanel spacing="5">
              <g:VerticalPanel>
                <g:Label>Memory Window</g:Label>
                <g:CheckBox ui:field="memoryFollowIp">Follow Ip</g:CheckBox>
                <g:Button width="100%" ui:field="memoryScrollUp">Up</g:Button>
                <g:HorizontalPanel addStyleNames="{css.memoryWindow}" horizontalAlignment="ALIGN_CENTER"
                  width="100%">
                  <g:VerticalPanel ui:field="memoryWindowAddress" spacing="0"></g:VerticalPanel>
                  <g:VerticalPanel ui:field="memoryWindow" spacing="0"></g:VerticalPanel>
                </g:HorizontalPanel>
                <g:Button width="100%" ui:field="memoryScrollDown">Down</g:Button>
              </g:VerticalPanel>
            </g:HorizontalPanel>
          </g:HorizontalPanel>
        </g:HorizontalPanel>

        <g:VerticalPanel spacing="5">
        <g:VerticalPanel>
          <g:Label>Registers in hex</g:Label>
          <g:HorizontalPanel addStyleNames="{css.memoryWindow}" ui:field="registerWindowValues"
            spacing="0"></g:HorizontalPanel>
        </g:VerticalPanel>

          <g:VerticalPanel>
            <g:Label>Flags</g:Label>
            <g:HorizontalPanel addStyleNames="{css.memoryWindow}" ui:field="flagValues" spacing="0"></g:HorizontalPanel>
          </g:VerticalPanel>
          <g:HorizontalPanel spacing="0">
            <g:Button ui:field="compile">Compile</g:Button>
            <g:Label width="20px"></g:Label>
            <g:Button ui:field="stepButton">Step</g:Button>
          </g:HorizontalPanel>
        </g:VerticalPanel>

        <g:VerticalPanel width="100%">
          <g:HTMLPanel>
            <HR></HR>
          </g:HTMLPanel>
          <g:Label>Output</g:Label>
          <g:TextArea ui:field="errorWindow" width="100%" height="80px"></g:TextArea>
          <g:VerticalPanel width="100%">
            <g:HTMLPanel>
              <HR></HR>
            </g:HTMLPanel>
            <g:Label>Load example code by cliking buttons</g:Label>
            <g:HorizontalPanel>
              <g:Button ui:field="loadArithmeticButton">Arithmetic</g:Button>
            </g:HorizontalPanel>
          </g:VerticalPanel>
        </g:VerticalPanel>
      </g:VerticalPanel>
    </g:center>
  </g:DockLayoutPanel>
</ui:UiBinder> 